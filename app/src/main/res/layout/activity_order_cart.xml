<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".srceen.OrderCart">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Trang đặt hàng"
            android:textColor="@color/text_fuzz3"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="30dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="-20dp"
                android:background="@drawable/d_tick_background"
                android:elevation="1dp"
                android:padding="10dp"
                app:srcCompat="@drawable/i_tick" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/d_background_order_1"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="40dp"
                android:paddingBottom="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Đặt hàng thành công!"
                        android:textColor="@color/text_fuzz3"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,MissingConstraints" />

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingVertical="2dp"
                        android:textSize="12sp"
                        android:text="Hóa đơn điện tử sẽ sớm dược gửi đến email của bạn"
                        android:textAlignment="center"
                        app:layout_constraintEnd_toEndOf="@+id/textView2"
                        app:layout_constraintStart_toStartOf="@+id/textView2"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"
                        tools:ignore="HardcodedText" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/txtTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:text="120.000 đ"
                    android:textColor="@color/text_fuzz3"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingVertical="2dp"
                    android:text="Đã thanh toán"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/d_background_order_2"
                android:paddingVertical="16dp"
                android:paddingHorizontal="5dp"
                android:text="Giao siêu nhanh chỉ trong 2h"
                android:textSize="12sp"
                android:textAlignment="center"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/d_background_green_20"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Về trang chủ"
            android:textColor="@color/white"
            tools:ignore="HardcodedText,MissingConstraints" />
    </LinearLayout>

</LinearLayout>
