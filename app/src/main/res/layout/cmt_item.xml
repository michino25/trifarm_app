<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingVertical="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/d_carditem_background"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginVertical="6dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="6dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="1dp"
            tools:ignore="RtlSymmetry">

            <ImageView
                android:id="@+id/imv_avt_cmt"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:src="@drawable/i_user_line" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingHorizontal="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:text="Username"
                    android:textColor="@color/text_fuzz3"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:paddingVertical="4dp"
                    android:text="Time"
                    android:textColor="@color/text_fuzz3"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,RtlSymmetry" />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/text_fuzz3"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <TextView
                android:id="@+id/tv_cmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sản phẩm tốt, giá hợp lý, giao hàng nhanh."
                android:textColor="@color/text_fuzz6"
                android:textSize="13sp"
                tools:ignore="HardcodedText,RtlSymmetry,SmallSp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="3dp"
                android:paddingStart="0dp"
                android:text="Hữu ích (3)"
                android:textStyle="bold"
                android:textColor="@color/green_2"
                android:textSize="11sp"
                tools:ignore="HardcodedText,RtlSymmetry,SmallSp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:paddingHorizontal="1dp"
                    android:layout_gravity="center"
                    android:src="@drawable/i_love_green" />

                <TextView
                    android:id="@+id/tv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="3dp"
                    android:paddingStart="2dp"
                    android:text="Hữu ích (3)"
                    android:textColor="@color/green_2"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,RtlSymmetry,SmallSp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

