<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingVertical="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/d_carditem_background"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginVertical="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            tools:ignore="RtlSymmetry">

            <ImageView
                android:id="@+id/imv_photo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/demo" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingHorizontal="4dp"
                tools:ignore="NestedWeights">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:paddingStart="8dp"
                    android:text="Măng cụt"
                    android:textColor="@color/text_fuzz3"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="3dp"
                        android:paddingStart="8dp"
                        android:text="50.000"
                        android:textColor="@color/text_fuzz6"
                        android:textSize="11sp"
                        tools:ignore="HardcodedText,RtlSymmetry,SmallSp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="3dp"
                        android:paddingStart="3dp"
                        android:text="₫"
                        android:textColor="@color/text_fuzz6"
                        android:textSize="11sp"
                        tools:ignore="HardcodedText,RtlSymmetry,SmallSp" />

                </LinearLayout>

                <!-- số lượng -->
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="6dp"
                    android:background="@drawable/d_quantity_background"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_minus_cart"
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.3"
                        android:paddingHorizontal="4dp"
                        android:src="@drawable/baseline_remove_24" />

                    <TextView
                        android:id="@+id/txt_quantity_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:background="@drawable/d_square_line_background_gray"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="@color/text_fuzz3"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/btn_plus_cart"
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.3"
                        android:paddingHorizontal="4dp"
                        android:src="@drawable/baseline_add_24_black" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btn_deleteCart"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:padding="4dp"
                    android:src="@drawable/i_bin_trash" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
